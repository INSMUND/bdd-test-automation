package stepDefinitions;

import java.util.concurrent.TimeUnit;

import org.junit.Assert;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.firefox.FirefoxDriver;

import io.cucumber.java.en.Given;
import io.cucumber.java.en.Then;
import io.cucumber.java.en.When;
import pageObjects.HomePage;
import pageObjects.RegistrationFormPage;

public class step {
	WebDriver driver;
	HomePage home;
	RegistrationFormPage regPage;

	@Given("^User is on the website Homepage$")
	public void user_is_on_Home_Page() {
		driver = new FirefoxDriver();
		driver.manage().window().maximize();
		driver.manage().timeouts().implicitlyWait(60, TimeUnit.SECONDS);
		driver.get("https://www.pesoto.md/md/mol/index.html");
	}

	@When("^I finds a link to register and click the link")
	public void click_the_register_link() {
		home = new HomePage(driver);
		home.clickRegisterButton();
	}

	@Then("^Registration form is opening$")
	public void registration_form_is_opening() {
		Assert.assertTrue(regPage.registerButtonIsPresent());
		driver.quit();
	}
}
